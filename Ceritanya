<div class="box">
  <h3>Tanya Pricelist Foto Wisuda</h3>

  <input type="text" id="nama" placeholder="Nama Anda" required>

  <select id="sesi">
    <option value="">Jenis Sesi (opsional)</option>
    <option>Solo</option>
    <option>Couple</option>
    <option>Group</option>
  </select>

  <textarea id="kebutuhan" placeholder="Kebutuhan / pertanyaan (opsional)"></textarea>

  <button onclick="kirimWA()">Hubungi Admin via WhatsApp</button>
</div>

<script>
function kirimWA() {
  var nama = document.getElementById("nama").value;
  var sesi = document.getElementById("sesi").value;
  var kebutuhan = document.getElementById("kebutuhan").value;

  if (!nama) {
    alert("Mohon isi nama terlebih dahulu.");
    return;
  }

  var nomorWA = "6285129787216"; // NOMOR WA KAMU

  var pesan =
    "Halo admin,%0A%0A" +
    "Saya " + nama + " ingin menanyakan pricelist foto wisuda.%0A";

  if (sesi) pesan += "Jenis sesi: " + sesi + "%0A";
  if (kebutuhan) pesan += "Kebutuhan: " + kebutuhan + "%0A";

  window.open("https://wa.me/" + nomorWA + "?text=" + pesan, "_blank");
}
</script>

